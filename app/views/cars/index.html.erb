<p id="notice"><%= notice %></p>

<h1>VIN Base</h1>

<div><%= render 'search' %></div>

<table border="1">
  <thead>
    <tr>
      <th>VIN</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Make Year</th>
      <th>Fuel</th>
      <th>Registration Number</th>
      <th>Operation Code</th>
      <th>Operation Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.vin %></td>
        <td><%= car.brand %></td>
        <td><%= car.model %></td>
        <td><%= car.make_year %></td>
        <td><%= car.fuel %></td>
        <td><%= car.n_reg_new %></td>
        <td><%= car.oper_code %></td>
        <td><%= car.oper_name %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @cars %>

